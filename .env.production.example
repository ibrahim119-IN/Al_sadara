# Al Sadara Production Environment Variables
# Copy this file to .env.production and update the values

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD
POSTGRES_DB=alsadara
DATABASE_URI=postgresql://postgres:CHANGE_THIS_TO_SECURE_PASSWORD@db:5432/alsadara

# Payload CMS Configuration
PAYLOAD_SECRET=CHANGE_THIS_TO_32_CHAR_SECRET_KEY
PAYLOAD_PUBLIC_SERVER_URL=https://alsadara.org

# Next.js Configuration
NEXT_PUBLIC_SERVER_URL=https://alsadara.org
NODE_ENV=production

# Optional: Payment Integration (Paymob/Fawry)
# PAYMOB_API_KEY=your-paymob-api-key
# PAYMOB_INTEGRATION_ID=your-integration-id
# PAYMOB_IFRAME_ID=your-iframe-id
# PAYMOB_HMAC_SECRET=your-hmac-secret
# FAWRY_MERCHANT_CODE=your-merchant-code
# FAWRY_SECURITY_KEY=your-security-key

# Optional: AI Integration (Gemini)
# GEMINI_API_KEY=your-gemini-api-key

# Optional: Email (SMTP)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@alsadara.org
