# Database
DATABASE_URI=postgresql://postgres:postgres@localhost:5432/alsadara

# Payload CMS
PAYLOAD_SECRET=your-secret-key-change-in-production-min-32-chars
PAYLOAD_PUBLIC_SERVER_URL=http://localhost:3000

# Gemini AI (New SDK - @google/genai)
GEMINI_API_KEY=your-gemini-api-key

# Model Configuration
GEMINI_CHAT_MODEL=gemini-2.5-flash
GEMINI_EMBEDDING_MODEL=gemini-embedding-001
GEMINI_LIVE_MODEL=gemini-2.5-flash-native-audio-preview-12-2025

# Embedding Configuration
GEMINI_EMBEDDING_DIMENSIONS=768

# Feature Flags
ENABLE_VOICE_SEARCH=true
ENABLE_GOOGLE_GROUNDING=true

# Legacy RAG Configuration (for backward compatibility)
RAG_RETRIEVAL_LIMIT=5
RAG_SIMILARITY_THRESHOLD=0.7

# Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=20
AI_RATE_LIMIT_PER_HOUR=100

# Cache
AI_CACHE_TTL=3600

# Auth
JWT_SECRET=your-jwt-secret-key-change-in-production

# Email (for password reset, order notifications)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@alsadara.com
SMTP_PASS=your-smtp-password
EMAIL_FROM=Al Sadara <noreply@alsadara.com>

# File Storage
UPLOAD_DIR=./uploads

# Payment Gateways

# Paymob (Egypt)
PAYMOB_API_KEY=your-paymob-api-key
PAYMOB_HMAC_SECRET=your-paymob-hmac-secret
PAYMOB_CARD_INTEGRATION_ID=your-card-integration-id
PAYMOB_WALLET_INTEGRATION_ID=your-wallet-integration-id
PAYMOB_KIOSK_INTEGRATION_ID=your-kiosk-integration-id

# Fawry (Egypt)
FAWRY_MERCHANT_CODE=your-fawry-merchant-code
FAWRY_SECURITY_KEY=your-fawry-security-key

# Cash on Delivery
ENABLE_CASH_ON_DELIVERY=true

# Node Environment
NODE_ENV=development
